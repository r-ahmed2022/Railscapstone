
<%= form_with model: @food do |f| %>
    <h2>New Food</h2>
    
      <div class="form-group my-2">
        <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
      </div>

       <div class="form-group my-2">
        <%= f.text_field :measurement_unit, placeholder: 'Measurement Unit', class: 'form-control' %>
      </div>

       <div class="form-group my-2">
        <%= f.text_field :price, placeholder: 'Price', class: 'form-control' %>
      </div>
          
      <div class="form-group my-2">
        <%= f.text_field :quantity, placeholder: 'Quantity', class: 'form-control' %>
      </div>
      <div class="form-group my-2">
        <%= f.submit :submit, class: 'button-login' %>
      </div>
<%= link_to 'Back To Foods List', foods_path %>

<% end %>
