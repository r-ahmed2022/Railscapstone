    <%= render 'layouts/header' %>
  <div class="container d-flex flex-column">
  <%= link_to "Add New recipe", new_recipe_path, class: 'add_recipe_btn align-self-end my-2' %>
   <% @recipes.each do |recipe| %>
     <div class="card my-2">
            <div class="card-header py-2 my-2">
            </div>
            <div class="card-body d-flex justify-content-between align-items-center">
                <h4 class="card-title"><%= link_to recipe.name, recipe %></h4>
                <p class="card-text"><%= truncate(recipe.description, length: 30) %></p>
                <%= button_to 'Remove', recipe, method: :delete, class: "button-login align-self-start" %>
            </div>
    </div>
  <% end %>
  </div>
